<% - include('../adminLayout/header.ejs') %>

  <% - include('../adminLayout/sidebar.ejs') %>

    <% - include('../adminLayout/navbar.ejs') %>

  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <h4 >SALES REPORT</h4>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    choose
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/admin/salesReportsort/<%=1%>">Day</a>
                    <a class="dropdown-item" href="/admin/salesReportsort/<%=7%>">week</a>
                    <a class="dropdown-item" href="/admin/salesReportsort/<%=30%>">month</a>
                    <a class="dropdown-item" href="/admin/salesReportsort/<%=365%>">year</a>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover" id="salesReport">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Date</th>
                      <th>Product Name</th>
                      <th>Quantity</th>
                      <th>Price</th>
                      <th>Payment Method</th>
                      <th>Total Amount</th>
                      <th>STATUS</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.forEach((item,i) => { %>
                   
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= item.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                            <td><%= item.products.productDetails.productName %></td>
                            <td><%= item.products.count %></td>
                            <td><%= item.products.productPrice %></td>
                            <td><%= item.paymentMethod %></td>
                            <td><%= item.products.totalPrice %></td>
                            <td><%= item.products.status %></td>
                            
                        </tr>                        
               <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>







    </div>
  </div>
    </div >
  </div >
< !--Table End-- >
<style>
    .dt-button.buttons-excel,
    .dt-button.buttons-csv,
    .dt-button.buttons-pdf {
        
      background-color: #4c7aaf;
      color: white;
      border-radius: 5px;
      border: none;
      margin: 10px;
      padding-left: 30px;
      padding-right: 30px;
      height: 30px;
      
    }
    .dataTables_wrapper .dataTables_filter input[type="search"] {
        color: white;
    }
  </style>
<script>
    $(document).ready(function () {
      $('#salesReport').DataTable({
        dom: 'Bfrtip',
        buttons: [
           'excel', 'pdf'
        ]
      });
    });
  </script>
  

