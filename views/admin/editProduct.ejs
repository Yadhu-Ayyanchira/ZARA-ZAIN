<%- include('../layouts/adminLayout/header.ejs') %>
    <%- include('../layouts/adminLayout/sidebar.ejs') %>
        <%- include('../layouts/adminLayout/navbar.ejs') %>


        <div class="card-body">
            <h3 class="card-title">Edit Product</h3>
        
            <form action="" method="POST" class="form-group m-2 mt-3" enctype="multipart/form-data">
                <label class="text-warning">PRODUCT</label>
                <input type="name" class="form-control form-control-lg" name="name" placeholder="Enter Name"
                    value="<%=product.productName %>" required>
                <br>
                <label class="text-warning">STOCK</label>
        
                <input type="text" class="form-control form-control-lg" name="stock" placeholder="Enter stock"
                    value="<%=product.StockQuantity %>" required>
                <br>
                <label class="text-warning">PRICE</label>
        
                <input type="text" class="form-control form-control-lg" name="price" placeholder="Enter price"
                    value="<%=product.price %>" required>
                <br>
        
                <div class="point col-md-12" style="display: flex;">
                    <% for(let i=0;i<product.image.length;i++){ %>
        
                        <div>
                            <label for="image" class="text-warning">Image</label>
                            <img style="width: 150px; height: 150px;margin: 20px;"
                                src="/adminAsset/adminImages/<%=product.image[i]%>" width="100" height="100">
                            <button type="button" class="btn btn-danger"
                                onclick="remove('<%=product._id%>','<%=i%>')">Remove</button>
                        </div>
                        <% } %>
                </div>
                <input type="file" class="form-control form-control-lg" name="image" accept="Image/*"
                    placeholder="Enter image path" multiple>
        
                <br>
                <label class="text-warning">CATEGORY</label>
        
                <input type="text" class="form-control form-control-lg" name="category" placeholder="Enter catogery"
                    value="<%=product.category %>" required>
                <br>
        
        
                <label class="text-warning">STATUS</label>
        
                <input type="text" class="form-control form-control-lg" name="status" placeholder="Enter status"
                    value="<%=product.Status %>" required>
                <br>
                <label class="text-warning">DESCRIPTION</label>
        
                <input type="text" class="form-control form-control-lg" name="description" placeholder="Enter discription"
                    value="<%=product.description %>" required>
                <br>
        
                <input type="hidden" class="" name="id" value="<%=product._id %>">
                <input class="btn btn-block btn-facebook auth-form-btn" type="submit" value="Update product">
        
            </form>
        </div>
        <a href="/admin/">Go Dashboard</a>

        <%- include('../layouts/adminLayout/footer.ejs') %>