<%- include('../layouts/adminLayout/header.ejs') %>
    <%- include('../layouts/adminLayout/sidebar.ejs') %>
        <%- include('../layouts/adminLayout/navbar.ejs') %>

            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">

                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Sales Report</h4>

                                    <div class="table-responsive">
                                        <table class="table table-hover" id="sales">
                                            <thead>
                                                <tr>
                                                    <th class="text-warning">Product</th>
                                                    <th class="text-warning">User Name</th>
                                                    <th class="text-warning">Order No</th>
                                                    <th class="text-warning">Total Amount</th>
                                                    <th class="text-warning">Quantity</th>
                                                    <th class="text-warning">Payment Mode</th>
                                                    <th class="text-warning">Status</th>
                                                    <th class="text-warning">Order Date</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-white">
                                                <% order.forEach((orderItem)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= orderItem.products.productDetails.product %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.userName %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.products._id %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.products.totalPrice %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.products.count %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.paymentMethod %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.products.status %>
                                                        </td>
                                                        <td>
                                                            <%= orderItem.date.toLocaleDateString('en-US', {
                                                                year: 'numeric' , month: 'short' , day: '2-digit'
                                                                }).replace(/\//g,'-') %>
                                                        </td>
                                                    </tr>
                                                    <%})%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>





            <style>
                .dt-button.buttons-excel,
                .dt-button.buttons-csv,
                .dt-button.buttons-pdf {
                    background-color: #4c7aaf;
                    color: white;
                    border-radius: 5px;
                    border: none;
                    margin: 10px;
                    padding-left: 30px;
                    padding-right: 30px;
                    height: 30px;

                }

                .dataTables_wrapper .dataTables_filter input[type="search"] {
                    color: white;
                }
            </style>


            


