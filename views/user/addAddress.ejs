<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post">
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label>Name</label>
                        <input name="userName" class="form-control" type="text" placeholder="John">
                    </div>
                    
                    <div class="col-md-6 form-group">
                        <label>Mobile No</label>
                        <input name="mobile" class="form-control" type="text" placeholder="+123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Alternative Mobile</label>
                        <input name="mobile2" class="form-control" type="text" placeholder="+123 456 789">
                    </div>
                    <div class="col-md-12 form-group">
                        <label>House Name</label>
                        <input name="house" class="form-control" type="text" placeholder="">
                    </div>
                    <div class="col-md-12 form-group">
                        <label>Landmark</label>
                        <input name="landmark" class="form-control" type="text" placeholder="Near Washington dc">
                    </div>
