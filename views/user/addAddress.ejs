                            <option>Algeria</option>
                            <option>India</option>
                            <option>Pakistan</option>
                            <option>USA</option>
                            <option>UAE</option>
                            <option>China</option>
                        </select>
                    </div> -->
                    <div class="col-md-6 form-group">
                        <label>City</label>
                        <input name="city" class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>State</label>
                        <input name="state" class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>PIN Code</label>
                        <input name="pincode" class="form-control" type="text" placeholder="123">
                    </div>
                    
                    
                </div>
                <div class="col-md-6 form-group">
                    <button type="submit" class="btn btn-success font-weight-bold  "
                            value="addAddress">Add Address</button>
                </div>
            </form>
            </div>
            
        </div>
        
    </div>
</div>
<!-- Checkout End -->
