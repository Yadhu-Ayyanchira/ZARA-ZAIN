<%- include('../layouts/user/header.ejs') %>








    <div class="login_main">
        <div class="row mainbox w-200 h-200 py-5 box">
            <div class="col-lg-6 p-5">
                <img style="opacity: .5; border-radius: 20px;"
                    src="https://media.istockphoto.com/id/1210116890/vector/people-register-online-registration-or-sign-up-user-interface-users-use-secure-login-and.jpg?s=170667a&w=0&k=20&c=UePyszPazcMf-6MyFom6hWWslMCOJxIwOwXUJ4CmEAI="
                    alt="" class="img-fluid">
            </div>
            <div class="col-lg-6 px-2 p-3">
                <h1 class="font-weight-bold py-3" style="font-family: 'Courier New', Courier, monospace;">Login</h1>
                <form action="/login" method="post">
                    <div class="form-row my-2">
                        <div class="col-lg-10">
                            <input type="text" name="email" placeholder="Enter Email"
                                class="form-control my-3 input_box" required>
                        </div>
                    </div>
                    <div class="form-row my-2">
                        <div class="col-lg-10">
                            <input type="password" name="password" placeholder="Enter password"
                                class="form-control my-3 input_box" required>
                        </div>
                    </div>
                    <div class="form-row my-2">
                        <div class="col-lg-10">
                            <button type="submit" class="btn1 form-control bg-primary text-light input_box"
                                value="Login">Log In</button>
                        </div>
                        <div class="mb-3">
                            <% if(message) { %>
                                <p class="text-danger">
                                    <%= message %>
                                </p>
                                <% } %>
                        </div>
                    </div>
                    <div class="form-row my-2">
                        <a href="/register">Dont have an Account?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>














