<%- include('../layouts/user/header.ejs') %>

<div class="container-fluid">
    <div class="row px-xl-5">
      <div class="col-lg-8">
        <h5 class="section-title position-relative text-uppercase mb-3">
          <span class="bg-secondary pr-3">Billing Address</span>
        </h5>
        <div class="bg-light p-30 mb-5">
          <form method="post">
            <div class="row">
              <div class="col-md-12 form-group">
                <label>Name</label>
                <input
                  name="userName"
                  class="form-control"
                  type="text"
                  value="<%= address.userName %>"
                />
              </div>
  
              <div class="col-md-6 form-group">
                <label>Mobile No</label>
                <input
                  name="mobile"
                  class="form-control"
                  type="text"
                  value="<%= address.mobile %>"
                />
              </div>
              <div class="col-md-6 form-group">
                <label>Alternative Mobile</label>
                <input
                  name="mobile2"
                  class="form-control"
                  type="text"
                  value="<%= address.altrenativeMob %>"
                />
              </div>
              <div class="col-md-12 form-group">
                <label>House Name</label>
                <input
                  name="house"
                  class="form-control"
                  type="text"
                  value="<%= address.houseName %>"
                />
              </div>
              <div class="col-md-12 form-group">
                <label>Landmark</label>
                <input
                  name="landmark"
                  class="form-control"
                  type="text"
                  value="<%= address.landmark %>"
                />
              </div>

              <div class="col-md-6 form-group">
                <label>City</label>
                <input
                  name="city"
                  class="form-control"
                  type="text"
                  value="<%= address.city %>"
                />
              </div>
              <div class="col-md-6 form-group">
                <label>State</label>
                <input
                  name="state"
                  class="form-control"
                  type="text"
                  value="<%= address.state %>"
                />
              </div>
              <div class="col-md-6 form-group">
                <label>PIN Code</label>
                <input
                  name="pincode"
                  class="form-control"
                  type="text"
                  value="<%= address.pincode %>"
                />
              </div>
            </div>
            <div class="col-md-6 form-group">
              <button
                type="submit"
                class="btn btn-success font-weight-bold"
                value="addAddress"
              >
                Update
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include('../layouts/user/footer.ejs') %>