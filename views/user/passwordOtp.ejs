<%- include('../layouts/user/header.ejs') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>MultiShop - Online Shop Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="user/css/style.css" rel="stylesheet" />
    <style>
      .login_main {
        background-image: url("https://images.unsplash.com/photo-1559070081-648fb00b2ed1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .mainbox {
        border-radius: 30px;
        background-color: rgb(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .box {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
      }
    </style>
  </head>

  <body>
    
    <div class="login_main">
      <div class="row mainbox w-200 h-200 py-5 box">
        <div class="col-lg-6 p-5">
          <img
            style="opacity: 0.5; border-radius: 20px"
            src="https://media.istockphoto.com/id/1210116890/vector/people-register-online-registration-or-sign-up-user-interface-users-use-secure-login-and.jpg?s=170667a&w=0&k=20&c=UePyszPazcMf-6MyFom6hWWslMCOJxIwOwXUJ4CmEAI="
            alt=""
            class="img-fluid"
          />
        </div>
        <div class="col-lg-6 px-2 p-3">
          <h1 class="font-weight-bold text-white py-3">Verify OTP</h1>
          <form action="/passwordOtp" method="post">
            <div class="form-row my-2">
              <div class="col-lg-10">
                <input
                  type="text"
                  name="otp"
                  placeholder="Enter OTP"
                  class="form-control my-3 input_box"
                  required
                />
              </div>
            </div>

            <div class="form-row my-2">
              <div class="col-lg-10">
                <button
                  type="submit"
                  class="btn1 form-control bg-primary text-light"
                >
                  Verify
                </button>
                <p style="color: green"></p>
                <% if(typeof message!=='undefined' ){ %>
                <h3
                  style="
                    color: green;
                    font-family: 'Courier New', Courier, monospace;
                  "
                >
                  <%= message %>
                </h3>
                <% } %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"
      ><i class="fa fa-angle-double-up"></i
    ></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
  </body>
</html>
<%- include('../layouts/user/footer.ejs') %>
