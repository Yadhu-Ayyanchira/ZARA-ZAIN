                <p class="text-muted mb-0"><%=userData.email%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone Number : </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%=userData.mobile%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              
              <hr>
              <button class="btn btn-primary" onclick="showEdit()" style="border-radius:7px;">Edit details</button>

          </div>
