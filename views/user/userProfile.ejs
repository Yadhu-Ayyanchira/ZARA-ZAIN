              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Name : </p>
                  </div>
                  <div class="col-sm-9">
                   <input name="name" type=text value='<%=userData.name%>'>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Email :</p>
                  </div>
                  <div class="col-sm-9">
                   <input disabled type=text value='<%=userData.email%>'></p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Phone Number : </p>
                  </div>
                  <div class="col-sm-9">
                   <input name="mobile" type=text value='<%=userData.mobile%>'></p>
                  </div>
                </div>
                <hr>
                
                <hr>
                <button class="btn btn-primary" type="submit" style="border-radius:7px;">Update details</button>
    
              </div>
            </div>
            </div>
          </div>
